require 'rails'

module IsoBsdI18n
  VERSION = '0.1.0'

  class Railtie < ::Rails::Railtie #:nodoc:
    initializer 'rails-i18n' do |app|
      I18n.load_path << Dir[File.join(File.expand_path(File.dirname(__FILE__) + '/../locales'), '*.yml')]
      I18n.load_path.flatten!

      require 'iso_bsd-i18n/size'
    end
  end
end
